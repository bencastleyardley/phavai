<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %> | Phavai</title>
  <meta name="description" content="<%= description %>" />
  <link rel="icon" href="/favicon.ico" />
  <style>
    :root {
      --green:#10b981;
      --gray:#6b7280;
      --bg:#f9fafb;
      --white:#fff;
      --border:#e5e7eb;
      --shadow:0 2px 6px rgba(0,0,0,.05);
    }
    body {
      margin:0;
      font-family:Inter,-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Arial,sans-serif;
      background:var(--bg);
      color:#111827;
      line-height:1.6;
    }
    .container {
      max-width:1080px;
      margin:0 auto;
      padding:32px 16px;
    }
    h1 { font-size:2rem; margin-bottom:1rem; }
    p.lede { font-weight:500; color:var(--gray); margin-bottom:2rem; }
    .card {
      background:var(--white);
      border:1px solid var(--border);
      border-radius:16px;
      box-shadow:var(--shadow);
      padding:24px;
      margin-bottom:24px;
    }
    .card img {
      width:100%;
      max-width:480px;
      border-radius:12px;
      display:block;
      margin:12px auto;
    }
    .header {
      display:flex;
      justify-content:space-between;
      align-items:center;
    }
    .score {
      background:var(--green);
      color:#fff;
      border-radius:999px;
      font-weight:700;
      padding:4px 10px;
      font-size:.9rem;
    }
    .specs {
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(140px,1fr));
      gap:4px 16px;
      margin-top:8px;
      font-size:.9rem;
    }
    .specs div b { display:block; color:#111827; }
    .price {
      font-size:.9rem;
      color:var(--gray);
      margin-top:4px;
    }
    footer {
      text-align:center;
      padding:40px 0;
      font-size:.9rem;
      color:var(--gray);
    }
  </style>
</head>
<body>
  <div class="container">
    <a href="/" style="color:var(--green);text-decoration:none;font-size:.85rem;">Phavai</a>
    <h1><%= title %></h1>
    <p class="lede"><%= description %></p>

    <% items.forEach(function(item){ %>
      <div class="card">
        <div class="header">
          <h2><%= item.name %></h2>
          <span class="score"><%= item.score.toFixed(1) %></span>
        </div>
        <img src="<%= item.image %>" alt="<%= item.name %>">
        <div class="price">
          <b>Price history (30 days)</b><br>
          Avg $<%= item.price.avg %> • Low $<%= item.price.low %> • Now $<%= item.price.now %>
        </div>
        <div class="specs">
          <div><b>Weight</b> <%= item.specs.weight %></div>
          <div><b>Drop</b> <%= item.specs.drop %></div>
          <div><b>Lugs</b> <%= item.specs.lugs %></div>
          <div><b>Stack</b> <%= item.specs.stack %></div>
          <div><b>Width</b> <%= item.specs.width %></div>
          <div><b>Surface</b> <%= item.specs.surface %></div>
          <div><b>Best for</b> <%= item.specs.bestFor %></div>
        </div>
      </div>
    <% }) %>

    <footer>© <%= year %> Phavai · Data-backed product insights for runners</footer>
  </div>
</body>
</html>
