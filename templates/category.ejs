<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title %> | Phavai</title>
  <meta name="description" content="<%= description %>">
  <link rel="canonical" href="https://www.phavai.com/<%= slug %>.html">
  <meta property="og:title" content="<%= title %> | Phavai">
  <meta property="og:description" content="<%= description %>">
  <meta property="og:image" content="https://www.phavai.com<%= ogImage %>">
  <meta property="og:type" content="website">
  <link rel="icon" href="/favicon.ico">

  <style>
    /* keep your existing CSS here; omitted for brevity */
    body{font-family:Inter,-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Arial,sans-serif}
    .links a + a::before{content:"\2022"; margin:0 6px; color:#cbd5e1}
  </style>

  <!-- Plausible (optional, lightweight analytics) -->
  <!-- <script defer data-domain="phavai.com" src="https://plausible.io/js/script.js"></script> -->
</head>
<body>
  <header class="site-header">
    <nav>
      <a href="/">Phavai</a>
      <a href="/best-mens-trail-running-shoes.html">Trail Shoes</a>
      <!-- add other categories -->
    </nav>
  </header>

  <main class="container">
    <h1><%= title %></h1>
    <p class="lede"><b>Our data-backed picks for every trail — from race-day rockets to all-day tanks.</b></p>

    <% for (const item of items) { %>
      <!-- Your existing card layout goes here (image, price box, specs, sources, why we recommend, social sentiment).
           Use EJS to inject item.* values -->
      <section class="card">
        <div class="card-head">
          <span class="badge"><%= item.score %></span>
          <h2><%= item.name %></h2>
        </div>
        <img src="<%= item.image %>" alt="<%= item.name %>" width="1120" height="630" loading="lazy" />
        <div class="grid">
          <div class="box">
            <div class="small muted">Price history (30 days)</div>
            <div class="small">Avg <b>$<%= item.price.avg %></b> • Low <b>$<%= item.price.low %></b> • Now <b>$<%= item.price.now %></b></div>
          </div>
          <div class="box">
            <div class="small muted">Specs</div>
            <div class="specs">
              <div>Weight <b><%= item.specs.weight %></b></div>
              <div>Drop <b><%= item.specs.drop %></b></div>
              <div>Lugs <b><%= item.specs.lugs %></b></div>
              <div>Stack <b><%= item.specs.stack %></b></div>
              <div>Width <b><%= item.specs.width %></b></div>
              <div>Surface <b><%= item.specs.surface %></b></div>
              <div>Best for <b><%= item.specs.bestFor %></b></div>
            </div>
          </div>
        </div>
        <!-- keep your sources, why we recommend, social sentiment blocks -->
      </section>
    <% } %>
  </main>

  <!-- ItemList JSON-LD -->
  <script type="application/ld+json">
  {
    "@context":"https://schema.org",
    "@type":"ItemList",
    "name":"<%= title %>",
    "itemListElement":[
      <% for (let i=0;i<items.length;i++){ %>
      { "@type":"ListItem", "position": <%= i+1 %>, "name":"<%= items[i].name %>" }<%= i<items.length-1 ? "," : "" %>
      <% } %>
    ]
  }
  </script>
</body>
</html>